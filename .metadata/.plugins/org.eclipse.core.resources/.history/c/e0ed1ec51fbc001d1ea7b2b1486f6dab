
public class P {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		String str = "nitin" ;
		
		boolean flag = true ;
		
		int i=0; 
		int j = str.length()-1 ;
		
		
		
		while(i<j) {
			
			if(str.charAt(i)!=str.charAt(j)) {
				flag = false ;
				break ;
			}
			
			i++ ;
			j-- ;
			
		}
		
		if(flag==false)
			System.out.println("This is not a palindrome!!!");
		else
			System.out.println("This is a palindrome");
	}

}
